
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import java.net.URL?>
<GridPane fx:controller="HomeWork4.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <stylesheets>
        <URL value="@/HomeWork4/css/style.css"/>
    </stylesheets>

    <Button text="Отправить" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#sendMsg" prefWidth="150"/>
    <TextField fx:id="textField" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#sendMsg" prefWidth="400"/>
    <TextArea fx:id="textArea" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="400" prefHeight="400"/>


</GridPane>